<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/tv_story_title"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_date"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_class_grey_500_24dp"
        android:fontFamily="@font/amiko_semibold"
        android:gravity="center|start"
        tools:text="Some random title" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/amiko"
        tools:text="MAR 30 2018" />

    <TextView
        android:id="@+id/tv_collaborators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_story_title"
        android:layout_marginTop="16dp"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_group_grey_500_24dp"
        android:fontFamily="@font/amiko"
        android:gravity="center|start"
        tools:text="2 Collaborators" />

    <TextView
        android:id="@+id/tv_total_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_story_title"
        android:layout_marginTop="16dp"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_timeline_grey_500_24dp"
        android:fontFamily="@font/amiko"
        android:gravity="center|start"
        tools:text="100/500" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_collaborators"
        android:layout_marginTop="16dp"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_person_grey_500_24dp"
        android:fontFamily="@font/amiko"
        android:gravity="center|start"
        tools:text="Veeresh Charantimath" />

</RelativeLayout>